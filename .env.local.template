# Firebase Configuration (Required)
# Get these from Firebase Console > Project Settings > General
apiKey=your_firebase_api_key_here
authDomain=your_project.firebaseapp.com
projectId=your_firebase_project_id
storageBucket=your_project.appspot.com
messagingSenderId=your_sender_id
appId=your_app_id

# Firebase Admin SDK (Required for server-side operations)
# Download service account key from Firebase Console > Project Settings > Service Accounts
# Paste the entire JSON as a single line string
FIREBASE_ADMIN_KEY={"type":"service_account","project_id":"...","private_key":"...","client_email":"..."}

# Spoonacular API (Optional - for recipe imports)
SPOONACULAR_API_KEY=your_spoonacular_api_key_here

# Development Settings
NODE_ENV=development
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Test Environment (for Playwright)
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=TestPassword123!